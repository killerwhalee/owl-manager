if [ "$#" -ne 1 ]; then
    echo "Usage: $0 [flush | rebuild | refresh]"
    exit 1
fi

case "$1" in
    "flush")
        rm -rv ./*/migrations/0*.py ./*/__pycache__ db.sqlite3
        ;;
    "rebuild")
        sh database flush
        sh database refresh
        python manage.py createsuperuser --settings=towel.settings.dev
        ;;
    "refresh")
        python manage.py makemigrations --settings=towel.settings.dev
        python manage.py migrate --settings=towel.settings.dev
        ;;
    *)
        echo "Unknown parameter: $1"
        exit 1
        ;;
esac

exit 0